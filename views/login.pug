extends partials/base.pug

block pageSpecificCSS

block content
  div(class='row')
    div(class='col-md-12')
      h1(class='text-center') Welcome To The Login
  hr

  form(action='/signin' method='post')
    div(class='form-group row')
      label(for='email' class='col-sm-2 col-form-label') Email:
      div(class='col-md-10')
        input(type='email' class='form-control' name='username' id='username' placeholder='Email')
    div(class='form-group row')
      label(for='password' class='col-sm-2 col-form-label') Password: 
      div(class='col-md-10')
        input(type='password' name='password' id='password' class='form-control' placeholder='Password')      
    div(class='form-group row')
      div(class='col-md-10')
        button(type='submit' class='btn btn-primary') Sign In



block pageSpecificScripts